# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Database
# Replace with your production MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/tmart?appName=Cluster

# Session Secret - Generate a strong random string for production
SESSION_SECRET=your_super_secret_session_key_change_this

# OAuth Configuration (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# Razorpay Payment Gateway
# Get your keys from https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_secret_key
